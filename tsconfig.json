{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,

    "baseUrl": "./",

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./scripts"]
}
